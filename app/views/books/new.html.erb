
<%= render 'books/list', book: @book, user: @user %>

<h1>Books</h1>

<table>
  <tr>
    <th><p>Title</p></th>
    <th><p>Opinion</p></th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><p><%= link_to book.title, book_path(params[:id]) %></p></td>
    <td><p><%= book.body %></p></td>
  </tr>
</table>

<% end %>