<div>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <P>name <%= user.name %></P>
  <p>introduction <%= user.introduction %></p>
  <% if user == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
  <% end %>

</div>

<h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>