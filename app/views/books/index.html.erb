<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="flash-notifications">
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>

<%= render 'list', book: @book, user: @user %>

<div class="col-md-8 offset-1">
<h2>Books</h2>

<table>
  <tr>
    <th><p>Title</p></th>
    <th><p>Opinion</p></th>
  </tr>
 <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><p><%= link_to book.title, book_path(book.id) %></p></td>
    <td><p><%= book.body %></p></td>
  </tr>
</div>

<% end %>