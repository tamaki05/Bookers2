<p><div class="notice"><%= flash[:notice] %></div></p>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'list', book: @book_new, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
          <table class="table">
            <tbody>
            <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %>
            <p><%= link_to @book.user.name, user_path(@user.id) %></p></td>
            <td><p><%= link_to @book.title, book_path %></p></td>
            <td><p><%= @book.body %></p></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
    </tbody>
          </table>
      </div>
    </div>
  </div>
</main>



